<% content_for :title, "Nooklyn: Apartments, Roommates, Neighborhoods in Brooklyn" %>
<% content_for :description, "Find Your nook. Nooklyn is how people connect with roommates, find apartments, and discover the best booze, snacks and coffee in their neighborhoods." %>
<% content_for :meta_url, "https://nooklyn.com/" %>
<% content_for :og_image, "https://nooklyn-files.s3.amazonaws.com/img/5k-iMac.png" %>

<div class="nklyn-homepage-jumbotron">
  <i class="nklyn-icon-logo nklyn-7x"></i>
  <h1>Nooklyn</h1>
  <h2>Find your Nook</h2>
  <br>
  <%= link_to "https://itunes.apple.com/us/app/nooklyn-apartments-roommates/id1024150110", target: "_blank" do %>
    <%= image_tag 'download-tunes.svg', class: "img-responsive center-block", alt: "button to download the nooklyn app on the App Store" %>
  <% end %>
</div>
<div class="nklyn-homepage-grid">
  <div class="neighborhood-card-container">
    <% @neighborhoods.each do |neighborhood| %>
      <%= link_to neighborhood do %>
      <div class="neighborhood-card">
        <%= image_tag neighborhood.image(:medium), class: "img-responsive", alt: "a photo of #{neighborhood.name}" %>
         <div class="hood-overlay">
          <h3><%= neighborhood.name %></h3>
         </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="mega-container">
  <div class="location-gallery-area row no-gutters">
    <% @photos.shuffle.each do |photo| %>
      <div class="col-xs-4">
        <%= link_to photo.location do %>
          <%= image_tag photo.image.url(:half_standard), class: 'img-responsive center-block' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
