<% content_for :title, "(#{@mate_posts.total_count}) Nooklyn Mate Posts Database" %>
<div class="nklyn-jumbotron">
  <div class="container">
    <h5><%= @mate_posts.total_count %> mates</h5>
    <h1>Mates Database</h1>
  </div>
</div>
<div class="container-fluid">
  <%= render 'admin/shared/admin_navigation' %>
  <div class="text-center">
    <%= paginate @mate_posts, :window => 10, :right => 1 %><br>
  </div>
  <div class="responsive-table">
    <table class="table nklyn-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Hidden</th>
          <th>Featured</th>
          <th>Created</th>
          <th>Updated</th>
          <th colspan="6">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @mate_posts.each do |mate_post| %>
        <tr>
          <td><%= mate_post.id %></td>
          <td><%= link_to mate_post.agent.name, mate_post_path(mate_post) %></td>
          <td><%= mate_post.hidden? %></td>
          <td><%= mate_post.featured? %></td>
          <td numerical-value="<%= mate_post.created_at.to_i %>"><%= mate_post.created_at.strftime('%D at %I:%M%P') %></td>
          <td numerical-value="<%= mate_post.updated_at.to_i %>"><%= mate_post.updated_at.strftime('%D at %I:%M%P') %></td>
          <td><%= link_to 'Feature', make_feature_admin_mate_post_path(mate_post), class: "button btn-edit btn-2x" %></td>
          <td><%= link_to 'Make Private', make_private_admin_mate_post_path(mate_post), class: "button btn-edit btn-2x" %></td>
          <td><%= link_to 'Make Public', make_public_admin_mate_post_path(mate_post), class: "button btn-edit btn-2x" %></td>
          <td><%= link_to 'Show', mate_post_path(mate_post), class: "button btn-white btn-2x" %></td>
          <td><%= link_to 'Edit', edit_mate_post_path(mate_post), class: "button btn-edit btn-2x" %></td>
          <td><%= link_to 'Delete', mate_post, method: :delete, data: {confirm: 'Are you sure you want to delete the location?' }, class: "button btn-reject btn-2x" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
