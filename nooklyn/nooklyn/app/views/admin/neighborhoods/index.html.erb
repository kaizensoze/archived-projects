<% content_for :title, "(#{@neighborhoods.total_count}) Nooklyn Neighborhoods Database" %>
<div class="nklyn-jumbotron">
  <div class="container">
    <h5><%= @neighborhoods.total_count %> neighborhoods</h5>
    <h1>Neighborhoods Database</h1>
  </div>
</div>
<div class="container-fluid">
  <%= render 'admin/shared/admin_navigation' %>
  <div class="text-center">
    <%= paginate @neighborhoods, :window => 10, :right => 1 %><br>
  </div>
  <div class="responsive-table">
    <table class="table nklyn-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>ID</th>
          <th>Name</th>
          <th>Borough</th>
          <th>Region</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th>Created</th>
          <th>Updated</th>
          <th colspan="3">Actions</th>

        </tr>
      </thead>
      <tbody>
        <% @neighborhoods.each do |neighborhood| %>
        <tr>
          <td><%= image_tag neighborhood.image.url(:thumb), class: "img-responsive img-circle-small" %></td>
          <td><%= neighborhood.id %></td>
          <td><%= neighborhood.name %></td>
          <td><%= neighborhood.borough %></td>
          <td><%= neighborhood.region.name %></td>
          <td><%= neighborhood.latitude %></td>
          <td><%= neighborhood.longitude %></td>
          <td numerical-value="<%= neighborhood.created_at.to_i  %>"><%= neighborhood.created_at.strftime('%D at %I:%M%P') %></td>
          <td numerical-value="<%= neighborhood.updated_at.to_i  %>"><%= neighborhood.updated_at.strftime('%D at %I:%M%P') %></td>
          <td><%= link_to 'Show', neighborhood_path(neighborhood), class: "button btn-white btn-2x" %></td>
          <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood), class: "button btn-edit btn-2x" %></td>
          <td><%= link_to 'Delete', neighborhood, method: :delete, data: {confirm: 'Are you sure you want to delete the neighborhood?' }, class: "button btn-reject btn-2x" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
