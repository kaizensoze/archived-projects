<div class="filters">
  <div class="row">
    <div class="col-sm-4">
      <i class="nklyn-icon-money-coins nklyn-3x"></i><br>
      <h5>Price</h5>
      <div class="input-group min-max-price">
        <span class="input-group-addon"><i class="nklyn-icon-money-bills"></i></span>
        <input type="text" class="general-text-field matrix-listing-filter" placeholder="Min" id="minimum-price">
        <input type="text" class="general-text-field matrix-listing-filter" placeholder="Max" id="maximum-price">
      </div>
      <i class="nklyn-icon-amenity-bed nklyn-3x"></i><br>
      <h5>Bedrooms</h5>
      <div class="btn-group" id="bedroom-filter">
        <button type="button" class="btn btn-default" value="0.0">0</button>
        <button type="button" class="btn btn-default" value="1.0">1</button>
        <button type="button" class="btn btn-default" value="2.0">2</button>
        <button type="button" class="btn btn-default" value="3.0">3</button>
        <button type="button" class="btn btn-default" value="4.0">4</button>
        <button type="button" class="btn btn-default" value="5.0">5+</button>
      </div>
      <hr>
      <i class="nklyn-icon-amenity-bath nklyn-3x"></i><br>
      <h5>Bathrooms</h5>
      <div class="btn-group" id="bathroom-filter">
        <button type="button" class="btn btn-default" value="0.0">0</button>
        <button type="button" class="btn btn-default" value="1.0">1</button>
        <button type="button" class="btn btn-default" value="2.0">2</button>
        <button type="button" class="btn btn-default" value="3.0">3</button>
        <button type="button" class="btn btn-default" value="4.0">4</button>
        <button type="button" class="btn btn-default" value="5.0">5+</button>
      </div>
      <hr>
      <h5>Amenities</h5>
      <select id="select-amenities" class="input-tags matrix-listing-filter" placeholder="Amenity">
        <option value=""></option>
        <option value="Central A/C">Central A/C</option>
        <option value="Doorman">Doorman</option>
        <option value="Elevator">Elevator</option>
        <option value="Laundry in building">Laundry in building</option>
        <option value="Dishwasher">Dishwasher</option>
        <option value="Common courtyard">Common courtyard</option>
        <option value="Private backyard">Private backyard</option>
        <option value="Shared backyard">Shared backyard</option>
        <option value="Balcony">Balcony</option>
        <option value="Terrace">Terrace</option>
        <option value="Patio">Patio</option>
        <option value="Roof access">Roof access</option>
        <option value="Private roof deck">Private roof deck</option>
        <option value="Storage space">Storage space</option>
        <option value="Bike storage">Bike storage</option>
        <option value="Gym">Gym</option>
        <option value="Private parking">Private parking</option>
        <option value="Washer dryer installed">Washer dryer installed</option>
        <option value="Washer dryer hookup">Washer dryer hookup</option>
      </select>
    </div>
    <div class="col-sm-4">
      <i class="nklyn-icon-building nklyn-3x"></i><br>
      <h5>Type</h5>
      <button type="button" id="residential-filter" class="btn btn-default" value="1" style="margin-right: 4px">Residential</button>
      <button type="button" id="commercial-filter" class="btn btn-default" value="1">Commercial</button>
      <br><br>
      <%= link_to "Sales", matrix_sales_path, class: "btn btn-default" %>
      <hr>
      <i class="nklyn-icon-dot nklyn-3x"></i><br>
      <h5>Status</h5>
      <div class="btn-group">
        <%= link_to "Active", matrix_index_path, class: "btn btn-default" %>
        <%= link_to "Pending", matrix_pending_path, class: "btn btn-default" %>
        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">Rented</a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "All", matrix_rented_path %></li>
          <li><%= link_to "My Rented", matrix_rented_me_path %></li>
          <% @neighborhoods.each do |neighborhood| %>
          <li><%= link_to neighborhood.name, matrix_neighborhood_rented_path(neighborhood) %></li>
          <% end %>
        </ul>
      </div>
      <hr>
      <button type="button" id="pets-filter" class="btn btn-default" value="1">Pets</button>
      <button type="button" id="owner-pays-filter" class="btn btn-default" value="1">Owner Pays</button>
      <hr>
      <i class="nklyn-icon-star-fill nklyn-3x"></i><br>
      <h5>Listing ID</h5>
      <div class="input-group">
        <span class="input-group-addon"><i class="nklyn-icon-asterisk"></i></span>
        <input type="text" id="listing-id" placeholder="Listing ID #"  class="form-control matrix-listing-filter" />
      </div>
    </div>
    <div class="col-sm-4">
      <i class="nklyn-icon-marker nklyn-3x"></i><br>
      <h5>Address</h5>
      <input type="text" id="address-search" placeholder="Filter by Address"  class="general-text-field matrix-listing-filter" />
      <hr>
      <button data-toggle="dropdown" aria-expanded="false" class="btn btn-default">Filter by Neighborhoods <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "All Listings", matrix_index_path %></li>
        <% @neighborhoods.each do |neighborhood| %>
          <li><%= link_to neighborhood.name, matrix_neighborhood_path(neighborhood) %></li>
        <% end %>
      </ul>
      <hr>
      <i class="nklyn-icon-calendar nklyn-3x"></i><br>
      <h5>Move In Date</h5>
      <div class="input-group">
        <span class="input-group-addon"><i class="nklyn-icon-calendar"></i></span>
        <input type="text" id="move_in_search" placeholder="Date"  class="matrix_date form-control matrix-listing-filter" />
      </div>
      <hr>
      <i class="nklyn-icon-users nklyn-3x"></i><br>
      <h5>Agent</h5>
      <select class="matrix-listing-filter selectize" id="agent">
        <option value="">Select Agent</option>
        <% @agents.each do |agent| %>
          <option value="<%= agent.name %>"><%= agent.name %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<hr>
<div class="text-center">
  <%= link_to 'Create Listing', new_listing_path, class: "button btn-blue btn-5x " %>
</div>
