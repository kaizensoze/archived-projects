<%= form_for(@job_application) do |f| %>
  <% if @job_application.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@job_application.errors.count, "mistake") %> must be corrected</h3>
      <ul>
      <% @job_application.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :resume, class: "general-text-label" %>
    <%= f.file_field :resume %>
  </div>
  <hr>
  <div class="field">
    <% JobApplication.positions.each do |position| %>
      <%= f.radio_button :position, position %>
      <%= f.label :position, position, value: position, class: "general-text-label" %>
      <br />
    <% end %>
  </div>
  <hr>
  <div class="field">
    <%= f.label :full_name, class: "general-text-label" %><br>
    <%= f.text_field :full_name, class: "general-text-field" %>
  </div>
  <div class="field">
    <%= f.label :email, class: "general-text-label" %><br>
    <%= f.text_field :email, class: "general-text-field" %>
  </div>
  <div class="field">
    <%= f.label :phone, class: "general-text-label" %><br>
    <%= f.text_field :phone, class: "general-text-field" %>
  </div>
  <div class="field">
    <%= f.label :current_company, class: "general-text-label" %><br>
    <%= f.text_field :current_company, class: "general-text-field" %>
  </div>
  <div class="actions text-center">
    <br>
    <%= f.submit "Submit", class: "button btn-blue btn-2x" %>
  </div>
<% end %>
