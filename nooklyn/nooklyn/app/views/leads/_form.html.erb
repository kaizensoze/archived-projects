<div class="lead-form-page">
<%= form_for(@lead) do |f| %>
  <% if @lead.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@lead.errors.count, "mistake") %> must be corrected</h3>
      <ul>
      <% @lead.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.label :full_name, class: "general-text-label" %>
      <%= f.text_field :full_name, class: "general-text-field" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :phone, class: "general-text-label" %>
      <%= f.text_field :phone, class: "general-text-field" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :email, class: "general-text-label" %>
      <%= f.text_field :email, class: "general-text-field"  %>
    </div>
    <div class="col-sm-6">
      <%= f.label :move_in, class: "general-text-label" %>
      <%= f.text_field :move_in, :class => "datepicker general-text-field" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :min_price, class: "general-text-label" %>
      <%= f.text_field :min_price, class: "general-text-field" %>
    </div>
    <div class="col-sm-6">
      <%= f.label :max_price, class: "general-text-label" %>
      <%= f.text_field :max_price, class: "general-text-field" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6">
      <%= f.label :pets, "Do you have pets?", class: "general-text-label" %><br />
      <div class="btn-group" data-toggle="buttons-radio">
        <button type="button" class="btn btn-default" value="1" data-toggle="tab">Yes</button>
        <button type="button" class="btn btn-default" value="0" data-toggle="tab">No</button>
        <input type="hidden" name="lead[pets]" id="lead_pets" />
      </div>
    </div>
    <div class="col-sm-6">
      <%= f.label :comments, "Any notes for us?", class: "general-text-label" %><br />
      <%= f.text_area :comments, :rows => "7", class: "general-text-area" %>
    </div>
  </div>
  <br>
  <hr>
  <div class="actions form-actions contact_form_actions text-center">
    <%= f.submit 'Submit', :class => 'button btn-nklyn-black btn-4x', id: "lead-submit-button" %>
  </div>
<% end %>
</div>

<script type="text/javascript">
$('form#new_lead').submit(function(){
    $(this).find('#lead-submit-button').prop('disabled', true);
});
</script>
