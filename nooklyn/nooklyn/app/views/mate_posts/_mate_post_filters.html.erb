<div class="rm-filter-bar row">
  <div class="col-sm-1">
    <h5>Price</h5>
  </div>
  <div class="col-sm-4">
    <div class="input-group min-max-price">
      <span class="input-group-addon"><i class="nklyn-icon-money-bills"></i></span>
      <input type="text" class="form-control roommate-card-filter" placeholder="Min" id="minimum-budget">
    </div>
  </div>
  <div class="col-sm-1">
    <h5>to</h5>
  </div>
  <div class="col-sm-4">
    <div class="input-group min-max-price">
      <span class="input-group-addon"><i class="nklyn-icon-money-bills"></i></span>
      <input type="text" class="form-control roommate-card-filter" placeholder="Max" id="maximum-budget">
    </div>
  </div>
  <div class="col-sm-2">
    <div class="btn-group pull-right">
      <button data-toggle="dropdown" aria-expanded="false" class="btn btn-default">Neighborhoods <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "All", mates_path %></li>
        <% @neighborhoods.each do |neighborhood| %>
          <li><%= link_to neighborhood.name, mates_neighborhood_path(neighborhood) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
