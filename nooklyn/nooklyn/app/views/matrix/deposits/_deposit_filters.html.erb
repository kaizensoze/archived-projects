<div class="container">
  <hr>
  <div class="btn-toolbar btn-group text-center">
    <%= link_to "Active Deposits", matrix_deposits_path, class: "button btn-white btn-2x" %>
    <%= link_to "Unsigned, Unapproved", matrix_deposit_status_path("1"), class: "button btn-white btn-2x" %>
    <%= link_to "Unsigned, Approved", matrix_deposit_status_path("2"), class: "button btn-white btn-2x" %>
    <%= link_to "Signed, Approved", matrix_deposit_status_path("3"), class: "button btn-white btn-2x" %>
    <%= link_to "Client Backed Out", matrix_deposit_status_path("4"), class: "button btn-white btn-2x" %>
    <%= link_to "Cancelled", matrix_deposit_status_path("5"), class: "button btn-white btn-2x" %>
    <%= link_to "Bushwick", matrix_office_path("1"), class: "button btn-white btn-2x" %>
    <%= link_to "Greenpoint", matrix_office_path("2"), class: "button btn-white btn-2x" %>
    <%= link_to "Crown Heights", matrix_office_path("3"), class: "button btn-white btn-2x" %>
    <%= link_to "All Transactions", matrix_transactions_path, class: "button btn-white btn-2x" %>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-4">
      <select class="deposit-filter selectize" id="agent-input">
        <option value="">Select Agent</option>
        <% @agents.each do |agent| %>
          <option value="<%= agent.name %>"><%= agent.name %></option>
        <% end %>
      </select>
    </div>
    <div class="col-sm-4">
      <%= form_tag matrix_deposits_url, method: :get do %>
        <div class="form-group">
          <%= text_field_tag 'address_search', '', id: 'deposit-address-search', placeholder: 'Address', class: 'general-text-area deposit-filter' %>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      <% end %>
    </div>
    <div class="col-sm-4">
      <%= form_tag matrix_deposits_url, method: :get do %>
        <div class="form-group">
          <%= text_field_tag 'client_search', '', id: 'client-name-search', placeholder: 'Client Name', class: 'general-text-area deposit-filter' %>
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      <% end %>
    </div>
  </div>
</div>
