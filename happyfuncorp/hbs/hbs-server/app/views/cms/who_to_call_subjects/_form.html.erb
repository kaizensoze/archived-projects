<div>
  <%= form_for [:cms, @who_to_call_subject], html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="action-buttons top">
      <%= render 'form_action' %>
    </div>
    
    <% if @who_to_call_subject.errors.full_messages.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <% @who_to_call_subject.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-2 control-label">Subject</label>
      <div class="col-sm-10">
        <%= f.text_field :subject, class: "form-control" %>
      </div>
    </div>

  <% end %>
</div>

<%= form_for [:cms, @who_to_call_subject], method: :delete, html: {id: "delete_who_to_call_subject"} do |f| %>
<% end %>
