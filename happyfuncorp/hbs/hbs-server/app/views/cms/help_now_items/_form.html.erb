<div>
  <%= form_for [:cms, @help_now_item], html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="action-buttons top">
      <%= render 'form_action' %>
    </div>
    
    <% if @help_now_item.errors.full_messages.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <% @help_now_item.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Body</label>
      <div class="col-sm-10">
        <%= f.text_field :body, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Phone Number</label>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>

  <% end %>
</div>

<%= form_for [:cms, @help_now_item], method: :delete, html: {id: "delete_help_now_item"} do |f| %>
<% end %>
