<div>
  <%= form_for [:cms, @who_to_call_subject, @who_to_call_item], html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="action-buttons top">
      <%= render 'form_action' %>
    </div>
    
    <% if @who_to_call_item.errors.full_messages.any? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <% @who_to_call_item.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-2 control-label">Title</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Phone Number</label>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

  <% end %>
</div>

<%= form_for [:cms, @who_to_call_subject, @who_to_call_item], method: :delete, html: {id: "delete_who_to_call_subject_who_to_call_item"} do |f| %>
<% end %>
