<div>
  <%= form_for [:cms, @background_image], html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="action-buttons top">
      <%= render 'form_action' %>
    </div>

    <% if @error_message %>
      <div class="alert alert-danger alert-dismissible" role="alert">
          <p><%= @error_message %></p>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= image_tag @background_image.image, size: "200x150" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Image</label>
      <div class="col-sm-10">
        <%= f.file_field :image, class: "form-control" %>
        * Image requirements: 640px width by 1136px height
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Active</label>
      <div class="col-sm-10">
        <%= f.check_box :active, class: "form-control" %>
      </div>
    </div>
    
  <% end %>
</div>

<%= form_for [:cms, @background_image], method: :delete, html: {id: "delete_background_image"} do |f| %>
<% end %>
