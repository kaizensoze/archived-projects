<%= form_tag "/cms/poll/save", html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="action-buttons top">
    <%= render 'form_action' %>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Active Poll</label>
    <div class="col-sm-10">
      <%= select_tag 'poll_id', 
                     options_for_select(@polls, @poll.active_id),
                     class: "col-sm-2 form-control", prompt: '- No Poll Selected -' %>
    </div>
  </div>
<% end %>