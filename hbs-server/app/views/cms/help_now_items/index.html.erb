<h1 class="page-header">
  Help Now
  <span class="pull-right">
    <a href="/cms/help_now_items/new" class="btn btn-primary">
      <span class="glyphicon glyphicon-plus"></span>
      Add
    </a>
  </span>
</h1>
<%= render 'layouts/cms/flashes' %>
<div class="table-responsive">
  <table class="table table-striped help-now-table">
    <thead>
      <tr>
        <th>Sort</th>
        <th>Title</th>
        <th>Body</th>
        <th>Phone Number</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @help_now_items.each do |help_now_item| %>
        <tr data-id=<%= help_now_item.id %>>
          <td><span class="glyphicon glyphicon-move"></span></td>
          <td><%= help_now_item.title %></td>
          <td><%= help_now_item.body %></td>
          <td><%= help_now_item.phone_number %></td>
          <td><%= link_to "edit", edit_cms_help_now_item_path(help_now_item) %></td>
          <td><%= link_to "delete", cms_help_now_item_path(help_now_item), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
